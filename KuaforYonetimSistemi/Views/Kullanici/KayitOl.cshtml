@model KuaforYonetimSistemi.Models.Kullanici

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kayıt Ol</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:300" rel="stylesheet">
    <style>
        /* Genel Sayfa Ayarları */
        body {
            background-color: #8bc34a;
            font-family: 'Roboto', sans-serif;
            margin: 0;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        /* Form Konteyneri */
        .container {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .form {
            background: #FFFFFF;
            max-width: 360px;
            padding: 45px;
            text-align: center;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

            .form label {
                color: #4CAF50;
                font-size: 18px;
            }

            .form input {
                font-family: 'Roboto', sans-serif;
                background: #f2f2f2;
                width: 100%;
                border: 0;
                margin: 0 0 15px;
                padding: 15px;
                font-size: 14px;
                border-radius: 5px;
            }

            .form button {
                font-family: 'Roboto', sans-serif;
                text-transform: uppercase;
                background: #4CAF50;
                width: 100%;
                padding: 15px;
                color: #FFFFFF;
                font-size: 14px;
                cursor: pointer;
                border-radius: 5px;
                transition: background 0.3s;
            }

                .form button:hover {
                    background: #43A047;
                }

            .form .mesaj {
                margin: 15px 0 0;
                color: #4CAF50;
                font-size: 12px;
            }

                .form .mesaj a {
                    color: #4CAF50;
                    text-decoration: none;
                    font-weight: bold;
                }

        .alert {
            margin-bottom: 15px;
            padding: 10px;
            border: 1px solid green;
            background-color: #dff0d8;
            color: green;
            border-radius: 5px;
        }

        .error {
            margin-bottom: 15px;
            padding: 10px;
            border: 1px solid red;
            background-color: #f2dede;
            color: red;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="form">
            @if (ViewBag.Basari != null)
            {
                    <div class="alert">@ViewBag.Basari</div>
            }
            @if (ViewBag.Hata != null)
            {
                    <div class="error">@ViewBag.Hata</div>
            }

            <form asp-action="KayitOl" method="post">
                <label><b>KAYIT</b></label><br />
                <br />
                <input asp-for="KullaniciAdi" class="form-control" placeholder="Kullanıcı Adınız" />
                <span asp-validation-for="KullaniciAdi" class="text-danger"></span>

                <input asp-for="Email" class="form-control" placeholder="E-posta Adresiniz" />
                <span asp-validation-for="Email" class="text-danger"></span>

                <input asp-for="Sifre" type="password" class="form-control" placeholder="Şifreniz" />
                <span asp-validation-for="Sifre" class="text-danger"></span>

                <button type="submit">Kayıt Ol</button>
                <p class="mesaj">Zaten Üye Misin? <a asp-action="GirisYap">Giriş Yap</a></p>
            </form>
        </div>
    </div>

    @section Scripts {
            <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
    }
</body>
</html>
