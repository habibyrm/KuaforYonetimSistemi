@{
    ViewData["Title"] = "AI Saç Modeli Değiştirici";
}

<h2>AI Saç Modeli Değiştirici</h2>

<form asp-action="UploadImage" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label for="image">Resim Yükle</label>
        <input type="file" name="image" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="hairStyle">Saç Modeli Seçin</label>
        <select name="hairStyle" class="form-control" required>
            <option value="PixieCut">Pixie Cut</option>
            <option value="BobCut">Bob Cut</option>
            <option value="Curly">Curly</option>
            <!-- Ek saç modelleri -->
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Gönder</button>
</form>

@if (ViewBag.ProcessedImageUrl != null)
{
    <h3>İşlenmiş Resim</h3>
    <img src="@ViewBag.ProcessedImageUrl" alt="İşlenmiş Resim" class="img-fluid" />
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}
