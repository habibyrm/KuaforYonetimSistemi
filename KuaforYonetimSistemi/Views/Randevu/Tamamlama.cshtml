@{
    ViewData["Title"] = "Randevu Tamamla";
}

<div>
    <p><strong>Çalışan:</strong> @ViewBag.Calisan.AdSoyad</p>
    <p><strong>İşlem:</strong> @ViewBag.Islem.Ad</p>
</div>

<form method="post" asp-action="Tamamla">
    <input type="hidden" name="calisanId" value="@ViewBag.Calisan.Id" />
    <input type="hidden" name="islemId" value="@ViewBag.Islem.Id" />

    <div>
        <label for="tarih">Randevu Tarihi:</label>
        <input type="datetime-local" name="tarih" id="tarih" required />
    </div>

    <button type="submit">Randevuyu Tamamla</button>
</form>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
