@{
    ViewData["Title"] = "Randevu Tamamlama";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="text-primary">Randevu Tamamlama</h1>
        <p class="text-muted">Randevu detaylarını doldurup işlemi tamamlayabilirsiniz.</p>
    </div>

    <div class="card shadow p-4">
        <div class="card-body">
            <h4 class="card-title text-secondary">Seçilen Randevu Bilgileri</h4>
            <hr />
            <p><strong>Çalışan:</strong> @ViewBag.Calisan.AdSoyad</p>
            <p><strong>İşlem:</strong> @ViewBag.Islem.Ad</p>
        </div>
    </div>

    <form method="post" asp-action="Tamamla" class="mt-4">
        <input type="hidden" name="calisanId" value="@ViewBag.Calisan.Id" />
        <input type="hidden" name="islemId" value="@ViewBag.Islem.Id" />

        <div class="mb-3">
            <label for="tarih" class="form-label">Randevu Tarihi ve Saati:</label>
            <input type="datetime-local" class="form-control" name="tarih" id="tarih" required />
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-success btn-lg w-50">Randevuyu Tamamla</button>
        </div>
    </form>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger mt-3 text-center">
            <strong>Hata:</strong> @TempData["Error"]
        </div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success mt-3 text-center">
            <strong>Başarılı:</strong> @TempData["Success"]
        </div>
    }
</div>
