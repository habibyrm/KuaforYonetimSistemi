@model List<KuaforYonetimSistemi.Models.RandevuViewModel>

<div class="container mt-5">
    <h1 class="text-center mb-4">Randevularım</h1>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger text-center">@TempData["Error"]</div>
    }

    @if (Model.Count > 0)
    {
        <table class="table table-hover table-bordered text-center">
            <thead class="table-dark">
                <tr>
                    <th>Tarih</th>
                    <th>Çalışan</th>
                    <th>İşlem</th>
                    <th>Kazanç</th>
                    <th>Durum</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var randevu in Model)
                {
                    <tr>
                        <td>@randevu.Tarih.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>@randevu.CalisanAdi</td>
                        <td>@randevu.IslemAdi</td>
                        <td>@randevu.Kazanc TL</td>
                        <td>@randevu.Durum</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning text-center">Hiç randevunuz bulunmamaktadır.</div>
    }
</div>
